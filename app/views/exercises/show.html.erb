<div class="show-header">
  <%= link_to image_tag("logo.png", class: "header-image", height: "80", width: "200", alt: "積みログ"), exercises_path %> 
  <% if user_signed_in? %>
    <div class="show-current-user">
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "show_user_delete" %>
      <%= link_to "投稿する", new_exercise_path , class: "show_new_habit" %>
    </div>
  <% else %>
    <div class="show-logout-user">
      <%= link_to "ログイン", new_user_session_path, class: "show_user_session" %>
      <%= link_to "新規登録", new_user_registration_path, calss: "show_user_new" %>
    </div>
  <% end %>
</div>
<div class="show-habits">
  <div class="show-habit">
    <div class="show-user">
      by<b><%= link_to @exercise.user.nickname, "#", class: "show_user_page" %></b>
    </div> 
    <div class="show-text">
      <%= simple_format(@exercise.text) %>
    </div> 
    <div class="show-image"> 
      <%= image_tag @exercise.image if @exercise.image.attached? %>
    </div>
  </div>
</div>
<div class="show-footer">
  <div class="comments">
    <div class="comment-form">
      <h1 class="comment-title">コメントする</h1>
      <input type="text-filed" class="comment-field">
      <input type="submit" value="送信する">
    </div>
    <div class="comment">
      <%#コメント一覧%>
      <div class="comment-user">
        <%#コメントしたユーザー%>
      </div>
    </div>
    </div>
  </div>
</div>