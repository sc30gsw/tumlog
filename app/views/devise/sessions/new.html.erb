<div class="sign-up-header">
  <%= link_to image_tag("logo.png", class: "sign_up_logo", height: "80", width: "200", alt: "積みログ"), root_path %>
</div>

<div class="form-group">
  <h2 class="title">会員情報入力</h2>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
  <%= form_with model: @user, url: user_session_path, method: :post, locale: true do |f| %>
    <div class="field">
      <label><b>メールアドレス</b></label><span class="indispensable">必須</span><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <label><b>パスワード</b></label><span class="indispensable">必須</span><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Log in", class: "actions-btn" %>
    </div>
  <% end %>
  <div class="links">
    <%= render "devise/shared/links", class: "share_link" %>
  </div>
</div>
