<div class="sign-up-header">
  <%= link_to image_tag("logo.png", class: "sign_up_logo", height: "80", width: "200", alt: "積みログ"), root_path %>
</div>

<div class="form-group">
  <h2 class="title">会員情報入力</h2>
    <% if notice %>
      <p class="alert-notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert-error"><%= alert %></p>
    <% end %>
  <%= form_with model: @user, url: user_session_path, method: :post, local: true do |f| %>
    <div class="field">
      <label for='user_email'><b>メールアドレス</b></label><span class="indispensable">必須</span><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <label for='user_password'><b>パスワード</b></label><span class="indispensable">必須</span><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit "ログイン", class: "actions-btn" %>
    </div>
  <% end %>
</div>
