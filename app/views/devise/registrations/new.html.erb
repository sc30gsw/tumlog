<div class="sign-up-header">
  <%= link_to image_tag("logo.png", class: "sign_up_logo", height: "80", width: "200", alt: "積みログ"), root_path %>
</div>

<div class="form-group">
  <h2 class="title">会員情報入力</h2>
  <%= form_with model: @user, url: user_registration_path, method: :post, local: true do |f| %>
  <div class="errors">
    <%= render "devise/shared/error_messages", model: @user, class: "error-messages" %>
  </div>
    <div class="field">
      <label><b>ニックネーム</b></label><span class="indispensable">必須</span><br />
      <%= f.text_field :nickname, autofocus: true, placeholder: "例)tumi太郎" %>
    </div>

    <div class="field">
     <label><b>メールアドレス</b></label><span class="indispensable">必須</span><br />
       <%= f.email_field :email, autocomplete: "email", placeholder: "PC・携帯どちらでも可" %>
    </div>

    <div class="field">
      <label><b>プロフィール</b></label><span class="indispensable">必須</span><br />
      <%= f.text_area :profile, autofocus: true, class: "profile-box", raws: 10, placeholder: "自身のことや目標などを書いてください" %>
    </div>
  
    <div class="field">
      <label><b>パスワード</b></label><span class="indispensable">必須</span><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "6文字以上の半角英数字" %>
      <p class="password-text">※英字と数字の両方を含めて<br>設定してください</p>
    </div>

    <div class="field">
      <label><b>パスワード(確認)</b></label><span class="indispensable">必須</span><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    
    <div class="actions">
      <p>登録ボタンを押すことにより、<a href="#">利用規約</a><br>
      に同意したものとみなします</p>
      <%= f.submit "会員登録", class: "actions-btn" %>
    </div>
  <% end %>

  <div class ="form-roles">
    <ul class="role-lists">
      <li><a href="#">プライバシーポリシー</a></li>
      <li><a href="#">積みログ利用規約</a></li>
      <li><a href="#">本人情報の登録について</a></li>
    </ul>
  </div>
</div>
